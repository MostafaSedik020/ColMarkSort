<Window x:Class="ColMarkSort.View.UI.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColMarkSort.View.UI"
             Title="Column Mark Sorting v2.0" Height="250" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="199*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="65,0,0,0" Grid.ColumnSpan="2">
            <Label Content="Select foundation level" FontSize="16" Margin="0,0,0,10"/>
            <!-- ComboBox for options -->
            <ComboBox Name="OptionsComboBox" Width="150" Margin="0,0,0,0" ItemsSource="{Binding}" />
            <Button Content="Sort Exisiting Columns" Click="OldColumns_Click" Width="150" Margin="5,20,0,0" Height="30"  />
            <Button Content="Export From ETABS" Click="EtabsColumns_Click" Width="150" Margin="5,20,0,0" Height="30"  />
        </StackPanel>
    </Grid>
</Window>
