<Window x:Class="ColMarkSort.UI.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColMarkSort.UI"
             Title="Column Mark Sorting" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Label Content="Select foundation level" FontSize="16" Margin="0,0,0,10"/>
            <!-- ComboBox for options -->
            <ComboBox Name="OptionsComboBox" Width="150" Margin="0,0,0,0" ItemsSource="{Binding}" />
            <Button Content="OK" Click="OKButton_Click" Width="100" Margin="5,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
